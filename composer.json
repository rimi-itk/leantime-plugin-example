{
    "name": "leantime/example",
    "description": "An example Leantime plugin",
    "license": "MIT",
    "type": "leantime-plugin",
    "version": "0.1.0",
    "authors": [
        {
            "name": "Mikkel Ricky",
            "email": "rimi@aarhus.dk"
        }
    ],
    "homepage": "https://github.com/rimi-itk/leantime-plugin-example",
    "require": {
        "fakerphp/faker": "^1.23"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "dev-main",
        "leantime/leantime": "^3.0",
        "psr/log": "^1.1",
        "squizlabs/php_codesniffer": "^3.9",
        "friendsofphp/php-cs-fixer": "^3.51",
        "phpcsstandards/phpcsextra": "^1.2",
        "zebra-north/phpcs-short-types": "^1.0",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5"
    },
    "repositories": {
        "leantime/leantime": {
            "type": "package",
            "package": {
                "name": "leantime/leantime",
                "version": "v3.1.0-beta",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/Leantime/leantime/archive/refs/tags/v3.1.0-beta.zip"
                }
            }
        }
    },
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "metasyntactical/composer-plugin-license-check": true
        }
    },
    "scripts": {
        "code-analysis": [
            "@code-analysis/phpstan"
        ],
        "code-analysis/phpstan": [
            "phpstan analyse"
        ],
        "coding-standards-apply": [
            "@coding-standards-apply/phpcbf"
        ],
        "coding-standards-apply/phpcbf": [
            "phpcbf --ignore='*/vendor/*' ."
        ],
        "coding-standards-check": [
            "@coding-standards-check/phpcs"
        ],
        "coding-standards-check/phpcs": [
            "phpcs --ignore='*/vendor/*' ."
        ]
    }
}
