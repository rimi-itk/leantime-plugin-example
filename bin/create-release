#!/usr/bin/env bash
set -o errexit -o errtrace -o noclobber -o nounset -o pipefail
IFS=$'\n\t'

script_dir=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
project_dir=$(cd "$(dirname "$script_dir")" && pwd)

tag=${1:-}
if [ -z "$tag" ]; then
  (>&2 echo "Usage: $0 tag")
  exit
fi

cd "$project_dir"

plugin_name=Example
name="leantime-plugin-${plugin_name}-${tag}.tar.gz"

composer install --no-dev

yarn install
npx mix

mkdir -p "$plugin_name"
rsync --archive --compress --exclude-from="$script_dir/build-exclude.txt" . "$plugin_name"
tar --create --file "$name" "$plugin_name"
rm -fr "$plugin_name"
sha256sum "$name" >| checksum.txt
