#!/usr/bin/env bash
set -o errexit -o errtrace -o noclobber -o nounset -o pipefail
IFS=$'\n\t'

script_dir=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
project_dir=$(cd "$(dirname "$script_dir")" && pwd)

tag=${1:-}
if [ -z "$tag" ]; then
  (>&2 echo "Usage: $0 tag")
  exit
fi

cd "$project_dir"

build_dir=build-release
name="leantime-plugin-example-${tag}.tar.gz"

composer install --no-dev
mkdir -p "$build_dir"
rsync --archive --compress --exclude "*.tar.gz" --exclude ".git*" --exclude "bin" --exclude "composer.*" . "$build_dir"
tar --create --file "$name" "$build_dir"
rm -fr "$build_dir"
sha256sum "$name" >| checksum.txt
